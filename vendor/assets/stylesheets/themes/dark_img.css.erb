 .mddtp-picker-date .mddtp-picker__left {
  background: url("<%= image_path('ic_keyboard_arrow_left_white_24px.svg') %>") ;
  left: 4px; }

.mddtp-picker-date .mddtp-picker__right {
  background: url("<%= image_path('ic_keyboard_arrow_right_white_24px.svg') %>") ;
  right: 4px; }

.mddtp-picker-date .mddtp-picker__left:disabled {
  background-image: url("<%= image_path('ic_keyboard_arrow_left_white_disabled_24px.svg') %>"); 
}

.mddtp-picker-date .mddtp-picker__right:disabled {
  background-image: url("<%= image_path('ic_keyboard_arrow_right_white_disabled_24px.svg') %>"); 
}
